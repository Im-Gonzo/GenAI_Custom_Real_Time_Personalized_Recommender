# GCP Core Configuration
GCP_PROJECT=your-project-id
GCP_LOCATION=us-central1
GCP_CREDENTIALS=/path/to/your/credentials.json

# Vertex AI Feature Store
VERTEX_FEATURE_STORE_ID=recsys-feature-store
VERTEX_FEATURE_STORE_INSTANCE_ID=recsys-feature-store-instance

# GCP Resource Names
GCP_ARTIFACT_REGISTRY=recsys-artifacts
GCP_MODEL_REGISTRY=recsys-models
GCP_ENDPOINT_ID=recsys-endpoint

# Storage Configuration
GCS_DATA_BUCKET=recsys-data
GCS_MODEL_BUCKET=recsys-models
GCS_ARTIFACT_BUCKET=recsys-artifacts

# GCP Agent Configuration
GEMINI_AGENT_ID=your-gemini-agent-id
GEMINI_AGENT_API_KEY=your-gemini-api-key

# Feature Engineering
CUSTOMER_DATA_SIZE=SMALL  # Options: SMALL, MEDIUM, LARGE
FEATURES_EMBEDDING_MODEL_ID=embedding-model-id

# Model Training - Two Tower Neural Network
TWO_TOWER_MODEL_EMBEDDING_SIZE=16
TWO_TOWER_MODEL_BATCH_SIZE=2048
TWO_TOWER_NUM_EPOCHS=10
TWO_TOWER_WEIGHT_DECAY=0.001
TWO_TOWER_LEARNING_RATE=0.01
TWO_TOWER_DATASET_VALIDATION_SPLIT_SIZE=0.1
TWO_TOWER_DATASET_TEST_SPLIT_SIZE=0.1

# Ranking Model Configuration
RANKING_DATASET_VALIDATION_SPLIT_SIZE=0.1
RANKING_LEARNING_RATE=0.2
RANKING_ITERATIONS=100
RANKING_SCALE_POS_WEIGHT=10
RANKING_EARLY_STOPPING_ROUNDS=5

# Model Serving Configuration
RANKING_MODEL_TYPE=ranking  # Options: ranking, llmranking